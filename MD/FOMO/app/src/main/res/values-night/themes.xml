<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.FOMO" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#F05C5C</item>
        <item name="colorPrimaryDark">#C75A5A</item>
        <item name="colorAccent">#F05C5C</item>
        <!-- Customize your theme here -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Custom EditText style -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <!-- Custom Button style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#E46E7E</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>



    <style name="Theme.FOMO" parent="Base.Theme.FOMO" />
</resources>