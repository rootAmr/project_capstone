<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.FOMO" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#E46E7E</item>
        <item name="colorPrimaryDark">#C75A5A</item>
        <item name="colorAccent">#F05C5C</item>
        <item name="android:windowBackground">#121212</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Base.Theme.FOMO.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#E46E7E</item>
        <item name="colorPrimaryDark">#C75A5A</item>
        <item name="colorAccent">#F05C5C</item>
        <item name="android:windowBackground">#121212</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Custom EditText style -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/bg_editable</item>
        <item name="android:textColorHint">#B3B3B3</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Custom Button style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#E46E7E</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxBackgroundColor">#333333</item>
        <item name="android:textColorHint">#B3B3B3</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomImageView">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.FOMO" parent="Base.Theme.FOMO" />
</resources>
